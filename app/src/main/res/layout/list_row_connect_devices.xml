<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/deviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/phone_with_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/small_padding"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deviceNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_name"
            android:textSize="@dimen/h3"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text 2"
            android:textSize="@dimen/h1"
            android:visibility="visible"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/connectImageView"
        android:layout_width="@dimen/connect_image_dim"
        android:layout_height="@dimen/connect_image_dim"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/wifi_disconnected"
        android:contentDescription="@string/wifi_image_description"/>

</LinearLayout>