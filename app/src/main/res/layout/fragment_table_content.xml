<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TableContentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <include
        layout="@layout/content_table_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/fabInterLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@mipmap/black_dark_transparent_50"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fabContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/orderCancelContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/orderCancelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/order_cancellation"
                    android:textSize="@dimen/h2"
                    android:textColor="@color/white"
                    android:background="@color/cafepp_light_grey"
                    android:visibility="gone"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/orderCancellationFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/remove"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paymentFabContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/paymentFabLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/payment"
                    android:textSize="@dimen/h2"
                    android:textColor="@color/white"
                    android:background="@color/cafepp_light_grey"
                    android:visibility="gone"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/paymentFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/money"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/orderFabContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:layout_gravity="bottom|end"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/orderFabLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/menu"
                    android:textSize="@dimen/h2"
                    android:textColor="@color/white"
                    android:background="@color/cafepp_light_grey"
                    android:visibility="gone"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/orderFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/restaurant_menu_white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:layout_gravity="bottom|end"
                android:gravity="center">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    app:srcCompat="@drawable/more_vert" />

            </LinearLayout>
    </FrameLayout>
</FrameLayout>